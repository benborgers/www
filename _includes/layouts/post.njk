---
layout: layouts/base
eleventyComputed:
    title: '{{ title | smartQuotes }}'
---

<div class="text-center space-y-1 mb-12">
    <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl sm:leading-tight">{{ title | safe }}</h1>
    <p class="text-gray-400">
        Updated {{ date.toLocaleString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) }}
    </p>
</div>

<div class="prose max-w-none">
    {{ content | safe }}
</div>

{% if tags %}
    <div class="mt-6">
        <p class="text-gray-400">
            <span>tags:</span>
            {% for tag in tags %}
                <a href="/tags/{{ tag }}" class="underline">{{ tag }}</a>{% if not loop.last %},{% endif %}
            {% endfor %}
        </p>
    </div>
{% endif %}
