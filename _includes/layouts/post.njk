---
layout: layouts/base
---

<div class="text-center space-y-1 mb-12">
    <h1 class="text-4xl font-bold text-gray-900">{{ title | safe }}</h1>
    <p class="text-gray-400">
        Updated {{ date.toLocaleString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) }}
    </p>
</div>

<div class="prose max-w-none">
    {{ content | safe }}
</div>

{% if tags %}
    <footer class="mt-12">
        <p class="text-gray-400">
            <span>tags:</span>
            {% for tag in tags %}
                <a href="/tags/{{ tag }}" class="underline">{{ tag }}</a>{% if not loop.last %},{% endif %}
            {% endfor %}
        </p>
    </footer>
{% endif %}
