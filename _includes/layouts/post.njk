---
layout: layouts/base
---

<div>
    <h1>{{ title | safe }}</h1>
    <p>
        Updated {{ date.toLocaleString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) }}
    </p>
</div>

<div>
    {{ content | safe }}
</div>

{% if tags %}
    <div>
        tags:
        {% for tag in tags %}
            <a href="/tags/{{ tag }}">{{ tag }}</a>{% if not loop.last %},{% endif %}
        {% endfor %}
    </div>
{% endif %}
