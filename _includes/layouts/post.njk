---
layout: layouts/base
eleventyComputed:
    title: '{{ title | smartQuotes }}'
    noindex: '{{ draft }}'
---

{% if draft %}
    <p class="absolute top-0 left-0 bg-blue-100 text-blue-600 pl-3 pr-4 py-1 font-semibold rounded-br-lg">
        Draft
    </p>
{% endif %}

<div class="text-center space-y-1 mb-12">
    <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">{{ title }}</h1>
    {% if date %}
        <p class="text-gray-400">
            Updated {{ date.toLocaleString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) }}
        </p>
    {% endif %}
</div>

<div class="prose max-w-screen-sm">
    {{ content | extendMarkdown | safe }}
</div>

{% if tags %}
    <div class="mt-6">
        <p class="text-gray-400">
            <span>tags:</span>
            {% for tag in tags %}
                <a href="/tags/{{ tag }}" class="underline">{{ tag }}</a>{% if not loop.last %},{% endif %}
            {% endfor %}
        </p>
    </div>
{% endif %}
