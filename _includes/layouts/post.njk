---
layout: layouts/base
eleventyComputed:
    title: '{{ title | smartQuotes }}'
    noindex: '{{ draft }}'
---

{% if draft %}
    <p class="absolute top-0 left-0 bg-blue-100 text-blue-600 pl-3 pr-4 py-1 font-semibold rounded-br-lg">
        Draft
    </p>
{% endif %}

<div class="space-y-3 mb-12">
    <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl sm:leading-tight">{{ title }}</h1>

    <div class="space-y-1 sm:space-y-0 sm:flex sm:space-x-3 items-center">
        {% if date %}
            <time class="text-gray-400">
                {{ date.toLocaleString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) }}
            </time>
        {% endif %}

        {% if tags %}
            <div>
                {% for tag in tags %}
                    {# A lot of posts have the programming tag, so it's kinda useless #}
                    {% if tag !== 'programming' %}
                        <a href="/tags/{{ tag }}" class="inline-block bg-gray-100 text-gray-500 rounded-full py-1 px-3 text-sm font-medium leading-none hover:text-gray-700 transition-colors duration-100">{{ tag }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

<!-- content-for-description -->
<div class="prose max-w-screen-sm">
    {{ content | extendMarkdown | safe }}
</div>
<!-- content-for-description -->
