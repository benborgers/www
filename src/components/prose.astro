<div class="@container">
  <div class="prose">
    <slot />
  </div>
</div>

<script>
  document.querySelectorAll(".prose img").forEach((img) => {
    const link = document.createElement("a");
    link.target = "_blank";
    link.classList.add(
      "cursor-zoom-in",
      "hover:opacity-75",
      "transition-opacity"
    );

    link.href = img.src;

    img.parentNode?.replaceChild(link, img);
    link.appendChild(img);
  });
</script>
