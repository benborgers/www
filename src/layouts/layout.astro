---
import NavLink from "../components/nav-link.astro";
import Polaroid from "../components/polaroid.astro";
import "../css/index.css";
import "../css/valkyrie.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <title>{title}</title>
    <link rel="icon" href="https://emojicdn.elk.sh/🐙" />
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content="Ben Borgers" />

    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

    <link
      rel="alternate"
      type="application/rss+xml"
      title="Ben Borgers"
      href="/rss"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <script
      src="https://owl.benborgers.com/script.js"
      data-site="ZWCPJCUA"
      data-included-domains="benborgers.com"
      defer></script>
  </head>
  <body class="antialiased bg-gray-50 text-pretty selection:bg-amber-100">
    <div
      class:list={[
        "grid grid-rows-[max-content_1fr] sm:grid-rows-none sm:grid-cols-[max-content_minmax(0,540px)] sm:gap-x-22",
        "sm:max-w-max sm:mx-auto min-h-dvh",
      ]}
    >
      <nav
        class="h-max max-sm:flex max-sm:items-end max-sm:gap-x-6 sm:sticky sm:top-0 sm:pt-16 pl-6 max-sm:pr-6 max-sm:pt-6"
      >
        <Polaroid />

        <div class="pr-1">
          <ul class="sm:mt-5 space-x-1.5 sm:space-x-0">
            <NavLink href="/" variant="primary">
              <span class="sm:hidden">Ben Borgers</span>
              <span class="max-sm:hidden">Home</span>
            </NavLink>
            <NavLink href="/blog" variant="primary">Blog</NavLink>
            <NavLink href="/now" variant="primary">Now</NavLink>
          </ul>

          <ul class="mt-0.5 sm:mt-4 space-x-1.5 sm:space-x-0">
            <NavLink href="https://twitter.com/benborgers" variant="secondary">
              Twitter
            </NavLink>
            <NavLink
              href="https://bsky.app/profile/benborgers.com"
              variant="secondary"
            >
              Bluesky
            </NavLink>
            <NavLink href="https://github.com/benborgers" variant="secondary">
              GitHub
            </NavLink>
          </ul>

          <ul class="max-sm:hidden sm:mt-4 space-x-1.5 sm:space-x-0">
            <NavLink
              href="https://buttondown.com/benborgers?as_embed=true"
              variant="secondary"
            >
              Newsletter
            </NavLink>
            <NavLink href="https://photos.ben.page" variant="secondary">
              Photos
            </NavLink>
            <NavLink href="/rss" variant="secondary"> RSS </NavLink>
          </ul>
        </div>
      </nav>

      <main class="pt-6 sm:pt-14 flex flex-col pr-6 max-sm:pl-6">
        <slot />

        <footer class="mt-auto pt-28 mb-6">
          <p class="text-sm font-medium text-gray-400">
            &copy; 2002 – {new Date().getFullYear()} Ben Borgers
          </p>
        </footer>
      </main>
    </div>
  </body>
</html>
