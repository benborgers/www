---
import Base from "../../components/Base.astro";
import CourseRow from "../../components/tufts/CourseRow.astro";
---

<Base title="Classes I’ve taken at Tufts" ogImage="/og-image/tufts">
  <link
    slot="head"
    href="https://api.fontshare.com/v2/css?f[]=satoshi@900,700,500,701,501,401,901,400&display=swap"
    rel="stylesheet"
  />

  <div
    class="text-neutral-700 font-[Satoshi,sans-serif] max-w-screen-sm mx-auto p-4 pb-36 pt-16"
  >
    <h1 class="font-black text-zinc-900 text-2xl sm:text-4xl tracking-tight">
      Classes I’ve taken at Tufts
    </h1>

    <p class="sm:mt-1 font-bold text-neutral-400">
      — <a href="/" class="underline">Ben Borgers</a>
    </p>

    <div class="mt-6 sm:mt-12">
      <CourseRow
        label="Fall 2022"
        courses={[
          { title: "OOP for GUI", subtitle: "CS 86", href: "/tufts/cs86" },
          { title: "Intro to Psychology", href: "/tufts/psy1" },
          { title: "Big Bang to Humankind", href: "/tufts/chem6" },
          { title: "Grimms’ Fairy Tales", href: "/tufts/ger170" },
          { title: "Children & Mass Media" },
        ]}
        className="mt-6"
      />
      <CourseRow
        label="Spring 2022"
        courses={[
          { title: "Data Structures", subtitle: "CS 15" },
          { title: "Bridge to Higher Mathematics" },
          { title: "Chinese 4" },
          { title: "Introduction to World Music" },
        ]}
        className="mt-6"
      />
      <CourseRow
        label="Fall 2021"
        courses={[
          { title: "Intro to CS", subtitle: "CS 11" },
          { title: "Linear Algebra" },
          { title: "Chinese 3" },
          { title: "Expository Writing" },
          { title: "Fight Against Mass Shootings" },
        ]}
        className="mt-6"
      />
    </div>
  </div>
</Base>
