---
import Base from "../components/Base.astro";

import captions from "../content/nyc-2022/captions.json";
---

<Base title="NYC 2022" bg="bg-black">
  <link
    slot="head"
    href="https://api.fontshare.com/v2/css?f[]=sentient@400,700,401,701&display=swap"
    rel="stylesheet"
  />

  <div
    class="px-6 pt-16 pb-48 md:p-24 md:pb-48 max-w-screen-lg mx-auto text-stone-50 font-[Sentient,serif]"
  >
    <a
      href="/"
      class="text-sm text-stone-500 hover:text-stone-200 transition-colors fixed top-0 left-0 p-3 rounded-br-lg bg-black"
      >&larr; benborgers.com</a
    >

    <h1 class="font-bold text-3xl">NYC 2022</h1>

    <div class="mt-6 grid md:grid-cols-2 gap-x-8 gap-y-10">
      {
        Object.keys(captions).map((filename) => (
          <div>
            <img src={`/nyc-2022/${filename}`} />
            <p class="mt-2 text-stone-500 text-sm italic">
              {captions[filename]}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</Base>
