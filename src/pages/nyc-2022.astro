---
import Base from "../components/Base.astro";

import captions from "../content/nyc-2022/captions.json";
---

<Base title="NYC 2022">
  <div class="px-6 pt-20 pb-48 md:p-24 md:pb-48 max-w-screen-lg mx-auto">
    <a
      href="/"
      class="text-sm font-medium text-stone-600 bg-stone-100 hover:bg-stone-200 transition-colors border border-stone-200 fixed top-0 left-0 p-3 rounded-br-lg z-50"
    >
      &larr; benborgers.com
    </a>

    <h1
      class="font-bold tracking-tighter text-3xl text-center sm:text-left grid sm:grid-cols-[max-content,1fr] items-center gap-x-1"
    >
      <div class="relative">
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="bg-emerald-300 h-10 w-10 rounded-full -translate-y-3">
          </div>
        </div>
        <img src="/nyc-2022/icon.svg" class="w-12 mx-auto isolate" />
      </div>
      <span class="mt-1">New York City Trip 2022</span>
    </h1>

    <div class="mt-6 grid md:grid-cols-2 gap-x-8 gap-y-10">
      {
        Object.keys(captions).map((filename) => (
          <div>
            <img src={`/nyc-2022/${filename}`} />
            <p class="mt-2 text-stone-500 text-sm">{captions[filename]}</p>
          </div>
        ))
      }
    </div>
  </div>
</Base>
