---
import type { GetStaticPaths } from "astro";
import Entry from "../components/entry.astro";
import RelatedPosts from "../components/related-posts.astro";
import Layout from "../layouts/layout.astro";
import { getPosts } from "../lib/posts";

export const getStaticPaths = (async () => {
  const entries = await getPosts({
    includeUnlisted: true,
    includeDrafts: true,
  });
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}) satisfies GetStaticPaths;

const { entry } = Astro.props;
---

<Layout title={entry.data.title} ogImage={entry.data.cover_image}>
  <Entry entry={entry} />

  <RelatedPosts
    slot="sidebar"
    entry={entry}
    class="max-lg:hidden h-screen sticky top-0 flex justify-end items-end pb-[10vh] pr-4"
    constrainWidth={200}
  />
</Layout>
