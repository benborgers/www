---
import Layout from '../layouts/Layout.astro'
import Prose from '../components/Prose.astro'
import ghost from '../lib/ghost'

const data = await ghost('pages/slug/home')
const page = data.pages[0]
---

<Layout>
  <div class="mt-24">
    <Prose>
      <Fragment set:html={page.html} />
    </Prose>
  </div>
</Layout>
