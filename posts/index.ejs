---
layout: layouts/post
title: Posts
---

<%# Sort the posts by date descending. %>
<%
    const posts = collections.posts.sort((a, b) => b.date - a.date)
%>

<div>
    <% for(const post of posts) { %>
        <% if(post.url !== '/posts/') { %>
            <a href="<%= post.url %>">
                <div>
                    <%= post.data.title %>
                    (<%= post.data.date.toLocaleString('en-US', { timeZone: 'UTC', month: 'short', day: 'numeric', year: 'numeric' }) %>)
                </div>
            </a>
        <% } %>
    <% } %>
</div>
